<style>
	.services {
		padding: 100px 0;
		background: linear-gradient(135deg, #0a0a0a 0%, #1a1a1a 100%);
		position: relative;
	}

	.services::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		height: 1px;
		background: linear-gradient(90deg, transparent 0%, #0ea5e9 50%, transparent 100%);
	}

	.services-container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 32px;
	}

	.services-header {
		text-align: center;
		margin-bottom: 80px;
	}

	.services-title {
		font-size: clamp(32px, 5vw, 48px);
		font-weight: 700;
		color: #ffffff;
		margin-bottom: 16px;
		letter-spacing: -0.02em;
	}

