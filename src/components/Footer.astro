---
import Logo from './Logo.astro';
import Tienda from './Tienda.astro';

---
<Tienda></Tienda>
<footer class="footer">
	<div class="footer-container">
		<div class="footer-content">
			<div class="footer-brand">
				<div class="footer-logo">
					<Logo />
				</div>
			</div>
			
			<div class="footer-contact">
				<p class="contact-item">
					<svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor">
						<path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"/>
					</svg>
					343 462-0534
				</p>
				<p class="contact-item">
					<svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor">
						<path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
					</svg>
					repairikboard@gmail.com
				</p>
			</div>
			
			<p class="footer-copyright">
				Â© 2024 iK-Board Repair. All rights reserved.
			</p>
		</div>
	</div>
</footer>

<style>
	.footer {
		background: rgba(10, 10, 10, 0.95);
		border-top: 1px solid rgba(255, 255, 255, 0.1);
		backdrop-filter: blur(10px);
	}

	.footer-container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 32px;
	}

	.footer-content {
		display: flex;
		align-items: center;
		
		padding: 24px 0;
		gap: 24px;
	}

	.footer-brand {
		flex-shrink: 0;
	}

	.footer-logo {
		transform: scale(0.7);
		transform-origin: left center;
	}

	.footer-contact {
		display: flex;
		gap: 24px;
		align-items: center;
	}

	.contact-item {
		display: flex;
		align-items: center;
		gap: 8px;
		color: #94a3b8;
		font-size: 13px;
		margin: 0;
		white-space: nowrap;
	}

	.contact-item svg {
		color: #0ea5e9;
		flex-shrink: 0;
	}

	.footer-copyright {
		color: #64748b;
		font-size: 13px;
		margin: 0;
		font-weight: 400;
		text-align: right;
		flex-shrink: 0;
	}

	@media (max-width: 768px) {
		.footer-container {
			padding: 0 20px;
		}

		.footer-content {
			flex-direction: column;
			padding: 20px 0;
			gap: 16px;
			text-align: center;
		}

		.footer-contact {
			flex-direction: column;
			gap: 12px;
		}

		.footer-copyright {
			text-align: center;
			font-size: 12px;
		}

		.footer-logo {
			transform: scale(0.6);
			transform-origin: center;
		}
	}
</style>